# ContextSwitch Backend Environment Variables
# Copy this to .env for local development

# Server
PORT=5001
NODE_ENV=development

# MongoDB Atlas Connection
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/contextswitch?retryWrites=true&w=majority

# JWT Secret (generate a strong random string)
JWT_SECRET=your-super-secret-jwt-key-min-32-chars

# OpenAI API Key
OPENAI_API_KEY=sk-your-openai-api-key

# Email (SMTP) - Gmail App Password
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-gmail-app-password
SMTP_FROM=your-email@gmail.com

# Frontend URL (for CORS if needed)
FRONTEND_URL=https://contextswitch.vercel.app
